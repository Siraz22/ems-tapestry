<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">
    <body class="container">

        <t:pagelink page="employee/AddEmployee">Add New Employee</t:pagelink><br/>

        <h3>Employee List</h3>
        <div class="eg">
            <t:grid source="employees" row="currEmployee" rowsPerPage="4" add="address" reorder="id,name,age,address" pagerPosition="top">
                <p:nameCell>
                    <t:pagelink page="employee/ViewEmployee" context="currEmployee.id">${currEmployee.name}</t:pagelink>
                </p:nameCell>
                <p:addressCell>
                    ${currEmployee.address.street1}
                </p:addressCell>
                <p:actionCell>
                    <t:pagelink page="emploee/AddEmployee"/>
                </p:actionCell>
            </t:grid>
        </div>
    </body>
</html>