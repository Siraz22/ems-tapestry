<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
    <body style="margin: 10px">
        <h3>Add Employee</h3>
        <t:form t:id="form" class="form-horizontal">
            <div class="form-group">
                <t:label for="name" class="col-sm-2" />
                <div class="col-sm-4">
                    <t:textfield t:id="name" t:value="employee.name" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <t:label for="age" class="col-sm-2" />
                <div class="col-sm-4">
                    <t:textfield t:id="age" t:value="employee.age" class="form-control"/>
                </div>
            </div>

            <h4>Address</h4>
            <div class="form-group">
                <t:label for="street1" class="col-sm-2"/>
                <div class="col-sm-4">
                    <t:textfield t:id="street1" t:value="employee.address.street1" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <t:label for="street2" class="col-sm-2" />
                <div class="col-sm-4">
                    <t:textfield t:id="street2" t:value="employee.address.street2" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <t:label for="zip" class="col-sm-2" />
                <div class="col-sm-4">
                    <t:textfield t:id="zip" t:value="employee.address.zip" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <t:label for="country" class="col-sm-2"/>
                <div class="col-sm-4">
                    <t:textfield t:id="country" t:value="employee.address.country" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    <t:submit value="Create Employee"/>
                </div>
            </div>
        </t:form>

        <t:pagelink page="employee/ListEmployees">Go back to Employee List</t:pagelink><br/>
    </body>
</html>