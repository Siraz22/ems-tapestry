<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
<body style="margin: 10px;">
<h2>Login Form</h2>
<t:form t:id="form" class="form-horizontal">
    <div class="form-group">
        <t:label for="username" class="col-sm-2"/>
        <div class="col-sm-4">
            <t:textfield t:id="username"/>
        </div>
    </div>
    <div class="form-group">
        <t:label for="password" class="col-sm-2"/>
        <div class="col-sm-4">
            <t:textfield type="password" t:id="password"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            <t:submit value="Login"/>
        </div>
    </div>
</t:form>
</body>
</html>